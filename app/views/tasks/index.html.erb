<div>
<table class="table table-bordered">
    <tr>
     <th>#</th>
     <th>Name</th>
     <th>Description</th>
    </tr>
      <% @tasks.each do |task| %>
    <tr>
    <td>
      <%= task.id %>
    </td>
    <td>
      <%= task.name %>
    </td>
    <td>
      <%= task.description %>
    </td>
    <td>
      <%= link_to "Show", task_path(task) %>
    </td>
    <td>
      <%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" }%>
    </td>
    <% end %>
</table>
</div>
